                        @Html.DisplayFor(model => model.CustEmail)
                    }
                </dd>
            </dl>
            @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
            {
                <input type="submit" value="Save Changes" />
            }

        }
    </div>
</div>
