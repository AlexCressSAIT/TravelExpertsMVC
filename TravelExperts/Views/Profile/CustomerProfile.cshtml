@model TravelExpertsData.Customer

@{
    ViewData["Title"] = "Profile";
}

<br />
<br />
<br />
<div class="row">
    <div class="col-lg-3">
        <div class="row">
            <div style=" width: 175px; height: 175px; padding-top:35px" class="text-center jumbotron mx-auto">
                <i style="font-size:96px;" class="fas fa-user"></i>
            </div>
            <div class="btn-placement mx-auto">
                <a style=" width: 150px; height: 40px" class="btn btn-primary">Order History</a>
                <br />
                <br />
                <form asp-controller="Profile" asp-action="EditProfile">
                    <button style=" width: 150px; height: 40px" class="btn btn-primary">Edit Profile</button>
                </form>
            </div>
        </div>
    </div>

    <div class=" col-lg-8 jumbotron">
        <div>
            <h3 style="margin-left:10px">Basic Information</h3>
            <hr style="background-color: var(--TravelBlue)" />
        </div>
        @using (Html.BeginForm("SaveProfile", "Profile", FormMethod.Post))
        {
            <dl class="row siteFont">
                @Html.HiddenFor(m => m.CustomerId, new { @Value = Model.CustomerId })
                <dt class="offset-sm-1 col-sm-4">
                    @Html.DisplayNameFor(model => model.CustomerId)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.CustomerId)
                </dd>
                <dt class="offset-sm-1 col-sm-4">
                    @Html.DisplayNameFor(model => model.CustFirstName)
                </dt>
                <dd class="col-sm-7">
                    @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
                    {
                        @Html.TextBoxFor(m => m.CustFirstName, new { @Value = Model.CustFirstName })
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.CustFirstName)
                    }

                </dd>
                <dt class="offset-sm-1 col-sm-4">
                    @Html.DisplayNameFor(model => model.CustLastName)
                </dt>
                <dd class="col-sm-7">
                    @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
                    {
                        @Html.TextBoxFor(m => m.CustLastName, new { @Value = Model.CustLastName })
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.CustLastName)
                    }
                </dd>
                <dt class="offset-sm-1 col-sm-4">
                    @Html.DisplayNameFor(model => model.CustUsername)
                </dt>
                <dd class="col-sm-7">
                    @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
                    {
                        @Html.TextBoxFor(m => m.CustUsername, new { @Value = Model.CustUsername })
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.CustUsername)
                    }
                </dd>
            </dl>
            <div>
                <h3 style="margin-left:10px">Contact Information</h3>
                <hr style="background-color: var(--TravelBlue)" />
            </div>
            <dl class="row siteFont">
                <dt class="offset-sm-1 col-sm-4">
                    @Html.DisplayNameFor(model => model.CustAddress)
                </dt>
                <dd class="col-sm-7">
                    @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
                    {
                        @Html.TextBoxFor(m => m.CustAddress, new { @Value = Model.CustAddress })
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.CustAddress)
                    }
                </dd>
                <dt class="offset-sm-1 col-sm-4">
                    @Html.DisplayNameFor(model => model.CustCity)
                </dt>
                <dd class="col-sm-7">
                    @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
                    {
                        @Html.TextBoxFor(m => m.CustCity, new { @Value = Model.CustCity })
                    }
                    else
                    {
                        @Html.DisplayFor(model => model.CustCity)
                    }
                </dd>
                <dt class="offset-sm-1 col-sm-4">
                    @Html.DisplayNameFor(model => model.CustProv)
                </dt>
                <dd class="col-sm-7">
                    @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
                    {
                        @Html.TextBoxFor(m => m.CustProv, new { @Value = Model.CustProv })
