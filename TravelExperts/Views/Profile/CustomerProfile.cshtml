@model TravelExpertsData.Customer

@{
    ViewData["Title"] = "Profile";
}
<br />
<br />
<br />
<div class="row">
    <div class="col-lg-3">
        <div class="row">
            <div style=" width: 175px; height: 175px; padding-top:35px" class="text-center jumbotron mx-auto">
                <i style="font-size:96px;" class="fas fa-user"></i>
            </div>
            <div class="btn-placement mx-auto">
                <a asp-controller="Booking" asp-action="ViewBookings" asp-route-id="@Model.CustomerId" style=" width: 150px; height: 40px" class="btn btn-primary">Order History</a>
                <br />
                <br />
                <a style=" width: 150px; height: 40px" class="btn btn-primary">Edit Profile</a>
            </div>
        </div>
    </div>

    <div class=" col-lg-8 jumbotron">
        <div>
            <h3 style="margin-left:10px">Basic Information</h3>
            <hr style="background-color: var(--TravelBlue)" />
        </div>
        <dl class="row siteFont">

            <dt class="offset-sm-1 col-sm-4">
                @Html.DisplayNameFor(model => model.CustomerId)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.CustomerId)
            </dd>
            <dt class="offset-sm-1 col-sm-4">
                @Html.DisplayNameFor(model => model.CustFirstName)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.CustFirstName)
            </dd>
            <dt class="offset-sm-1 col-sm-4">
                @Html.DisplayNameFor(model => model.CustLastName)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.CustLastName)
            </dd>
            <dt class="offset-sm-1 col-sm-4">
                @Html.DisplayNameFor(model => model.CustUsername)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.CustUsername)
            </dd>
        </dl>
        <div>
            <h3 style="margin-left:10px">Contact Information</h3>
            <hr style="background-color: var(--TravelBlue)" />
        </div>
        <dl class="row siteFont">
            <dt class="offset-sm-1 col-sm-4">
                @Html.DisplayNameFor(model => model.CustAddress)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.CustAddress)
            </dd>
            <dt class="offset-sm-1 col-sm-4">
                @Html.DisplayNameFor(model => model.CustCity)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.CustCity)
            </dd>
            <dt class="offset-sm-1 col-sm-4">
                @Html.DisplayNameFor(model => model.CustProv)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.CustProv)
            </dd>
            <dt class="offset-sm-1 col-sm-4">
                @Html.DisplayNameFor(model => model.CustPostal)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.CustPostal)
            </dd>
            <dt class="offset-sm-1 col-sm-4">
                @Html.DisplayNameFor(model => model.CustCountry)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.CustCountry)
            </dd>
            <dt class="offset-sm-1 col-sm-4">
                @Html.DisplayNameFor(model => model.CustHomePhone)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.CustHomePhone)
            </dd>
            <dt class="offset-sm-1 col-sm-4">
                @Html.DisplayNameFor(model => model.CustBusPhone)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.CustBusPhone)
            </dd>
            <dt class="offset-sm-1 col-sm-4">
                @Html.DisplayNameFor(model => model.CustEmail)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(model => model.CustEmail)
            </dd>
        </dl>
    </div>
</div>
