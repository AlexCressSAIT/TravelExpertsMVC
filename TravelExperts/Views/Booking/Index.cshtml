@model dynamic
@{
    ViewData["Title"] = "Book a Vacation Package";
}
<script src="/js/package-filter.js" defer></script>

<form class="row form-group text-center siteFont" asp-controller="Booking" asp-action="BookPackage">
    <label class="col-12 text-center col-md-auto col-form-label" for="selectedPackage">Select a vacation package:</label>
    <select style="color:black" class="col-8 mx-auto mx-sm-0 col-md-3 form-control siteFont" id="selectedPackage" name="selectedPackageId" asp-items='@new SelectList(Model, "Value", "Text")'></select>
</form>

<div id="pkgInfo" style="display: none" class="row">
    <div style="padding-top:36px" class="card jumbotron text-center" id="pkgInfoContent">
        <h1 id="pkgName"></h1>
        <hr class="blueRule"/>
        <h3 id="pkgDesc"></h3>
        <div>
            <span class="siteFont" id="pkgStartDate"></span> - <span class="siteFont" id="pkgEndDate"></span>
        </div>
        
        <div class="siteFont" id="pkgBasePrice"></div>
        <br />

        @* Image carousel *@
        <div id="carousel" class="carousel slide mx-auto" data-ride="carousel">
            <div style="border-radius:10px" class="carousel-inner"></div>
            <a class="carousel-control-prev" href="#carousel" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#carousel" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
        <br />
        <form asp-controller="Cart" asp-action="AddItem">
            <input id="selectedPackageId" name="packageId" type="hidden" />
            <button class="btn btn-primary siteFont" type="submit">Add to Cart</button>
        </form> 
    </div>
</div>
