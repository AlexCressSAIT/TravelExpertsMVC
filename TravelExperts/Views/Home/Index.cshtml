@{
    ViewData["Title"] = "Home Page";
}
<br />
<br />
<div style="margin-left:50px; margin-right: 50px; padding:0;" class="text-center jumbotron">
    <h2 class="display-4">Welcome to Travel Experts</h2>
    <p class="siteFont">Travel the world!</p>
</div>
<div>
    <div style="border-radius:10px" id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img style="border-radius: 10px; width: 500px" src="~/media/images/vacations/1/Beach.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block bg-dark" style="border-radius: 2em; opacity: 0.7">
                    <h5 class="text-readable text-light">The Dream Getaway...</h5>
                    <p class="text-readable text-light">Relax on the beach with some cervezas</p>
                </div>
            </div>
            <div class="carousel-item">
                <img style="border-radius: 10px; width: 500px" src="~/media/images/vacations/3/China.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block bg-dark" style="border-radius: 2em; opacity: 0.7">
                    <h5 class="text-readable text-white">Explore Asia</h5>
                    <p class="text-readable text-white">Experience the rich history and culture of Eastern Asia</p>
                </div>
            </div>
            <div class="carousel-item">
                <img style="border-radius:10px; width:500px;" src="~/media/images/vacations/4/Italy.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block bg-dark" style="border-radius: 2em; opacity: 0.7">
                    <h5 class="text-readable text-white">Romantic Getaway</h5>
                    <p class="text-readable text-white">Lose yourself in the stunning beauty of Italy, Greece, and France</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<br />




@if (!User.Identity.IsAuthenticated)
{
    <div class="text-center siteFont">
        <p>New user can register <span><a class="btn btn-primary siteFont" asp-controller="Account" asp-action="Register">Here</a></span> </p>
    </div>
    <div class="text-center siteFont">
        <p>Returning user can Login <span><a class="btn btn-primary siteFont" asp-controller="Account" asp-action="Login">Here</a></span> </p>
    </div>
}
<div class="text-center siteFont">
    <p>Returning user can order a package <span><a class="btn btn-primary siteFont" asp-controller="Booking" asp-action="Index">Here</a></span></p>
</div>
<br />
