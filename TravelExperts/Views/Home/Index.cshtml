@{
    ViewData["Title"] = "Home Page";
}

<!--
Home page which displays a carousel and cards with links.
Author: Alex Cress
-->

<br />
<br />
<!--Carousel code-->
<div>
    <div style="border-radius:10px" id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">

        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">

            <div class="carousel-item active">
                <img style="border-radius: 10px; width: 500px" src="~/media/images/vacations/1/Beach.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block bg-dark" style="border-radius: 2em; background-color: rgba(48, 48, 48, 179)">
                    <h4 class="text-readable text-white">The Dream Getaway...</h4>
                    <p class="text-readable text-white">Relax on the beach with some cervezas</p>
                </div>
            </div>
            <div class="carousel-item">
                <img style="border-radius: 10px; width: 500px" src="~/media/images/vacations/3/China.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block bg-dark" style="border-radius: 2em; background-color: rgba(48, 48, 48, 179)">
                    <h4 class="text-readable text-white">Explore Asia</h4>
                    <p class="text-readable text-white">Experience the rich history and culture of Eastern Asia</p>
                </div>
            </div>
            <div class="carousel-item">
                <img style="border-radius:10px; width:500px;" src="~/media/images/vacations/4/Italy.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block bg-dark" style="border-radius: 2em; background-color: rgba(48, 48, 48, 179)">
                    <h4 class="text-readable text-white">Romantic Getaway</h4>
                    <p class="text-readable text-white">Lose yourself in the stunning beauty of Italy, Greece, and France</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<br />

<!--Card code-->
<div class="album py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4" style="margin-bottom:15px">
                <div class="card mb-4 box-shadow thumbnailBox">
                    <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [100%x225]" style="height: 225px; width: 100%; display: block;" src="~/media/images/thumbnails/handshake.jpg" data-holder-rendered="true">
                    <div class="card-body d-flex flex-column">
                        <h4 class="text-center">Sign Up</h4>
                        <p class="card-text text-center">Sign up for a free account to begin booking today. An Agent will be assigned to you to assist with your travel inquiries!</p>
                        <div class="text-center mt-auto">
                            <button type="button" class="btn btn-primary " onclick="location.href='@Url.Action("Register", "Account")'">Sign Up Today!</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4" style="margin-bottom:15px">
                <div class="card mb-4 box-shadow thumbnailBox">
                    <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [100%x225]" style="height: 225px; width: 100%; display: block;" src="~/media/images/thumbnails/booking.jpg" data-holder-rendered="true">
                    <div class="card-body d-flex flex-column">
                        <h4 class="text-center">Packages</h4>
                        <p class="card-text text-center">Browse from our many 4 vacation packages that will astound you! You won't even believe what #3 is!</p>
                        <div class="text-center mt-auto">
                            <button type="button" class="btn btn-primary " onclick="location.href='@Url.Action("Index", "Booking")'">Browse Packages</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4" style="margin-bottom:15px">
                <div class="card mb-4 box-shadow thumbnailBox">
                    <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [100%x225]" style="height: 225px; width: 100%; display: block;" src="~/media/images/thumbnails/phone.jpg" data-holder-rendered="true">
                    <div class="card-body d-flex flex-column">
                        <h4 class="text-center">Contact</h4>
                        <p class="card-text text-center">Prefer to speak to a person? We do too! Call us today and speak to one of our Agents!</p>
                        <div class="text-center mt-auto">
                            @*Dead link, no contact page in the project.*@
                            <button type="button" class="btn btn-primary">Contact Us</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>